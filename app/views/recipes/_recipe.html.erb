<%= link_to recipe_path(recipe, q: params[:q]), class: "block" do %>
  <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition">
    <% if recipe.image_url.present? %>
      <img src="https://www.allrecipes.com/img/misc/og-default.png" alt="<%= recipe.title %>" class="w-full h-48 object-cover">
    <% end %>

    <div class="p-4 space-y-2">
      <h3 class="text-xl font-semibold text-gray-800"><%= recipe.title %></h3>
      <p class="text-sm text-gray-500">By <%= recipe.author.presence || "Unknown" %></p>
      <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
        <%= recipe.category %>
      </span>
    </div>
  </div>
<% end %>

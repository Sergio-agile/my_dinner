<div class="max-w-3xl mx-auto mt-8 p-6 bg-white rounded-lg shadow">
  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @recipe.title %></h1>

  <% if @recipe.image_url.present? %>
    <img src="https://www.allrecipes.com/img/misc/og-default.png" alt="<%= @recipe.title %>" class="w-full h-64 object-cover rounded mb-6">
  <% end %>

  <div class="grid grid-cols-2 gap-4 text-gray-700 mb-6">
    <div><strong>Prep Time:</strong> <%= @recipe.prep_time %> min</div>
    <div><strong>Cook Time:</strong> <%= @recipe.cook_time %> min</div>
    <div><strong>Cuisine:</strong> <%= @recipe.cuisine %></div>
    <div><strong>Category:</strong> <%= @recipe.category %></div>
    <div><strong>Author:</strong> <%= @recipe.author %></div>
    <div><strong>Ratings:</strong> <%= @recipe.ratings %></div>
  </div>

  <% if @recipe.ingredients.any? %>
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Ingredients</h2>
    <ul class="list-disc list-inside text-gray-700">
      <% @recipe.recipe_ingredients.each do |ingredient| %>
        <li><%= ingredient.original_text %></li>
      <% end %>
    </ul>
  <% end %>

  <%= link_to "← Back to Recipes", recipes_path(q: params[:q], page: params[:page]), class: "inline-block mt-6 px-4 py-2 bg-orange-600 text-white rounded hover:bg-orange-700" %>
</div>

<%= form_with url: recipes_path, method: :get, class: "flex gap-2 items-center mb-4 ms-5 me-5 ", id: "recipe-search-form" do %>
  <%= text_field_tag :q, params[:q], placeholder: "Chicken curry milk ...",
      class: "flex-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>

  <%= select_tag :sort, options_for_select([['Most Relevant', 'relevance'], ['Highest Rated', 'rating']], selected: params[:sort]),
        class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm", onchange: "document.getElementById('recipe-search-form').submit();" %>

  <%= submit_tag "Search",
      class: "px-4 py-2 bg-orange-600 text-white font-semibold rounded-md hover:bg-ogange-700 transition" %>
<% end %>

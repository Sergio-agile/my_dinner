<%= form_with url: recipes_path, method: :get, class: "flex gap-2 items-center mb-4" do %>
  <%= text_field_tag :q, params[:q], placeholder: "Search recipes...",
      class: "flex-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>

  <%= submit_tag "Search",
      class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition" %>
<% end %>
